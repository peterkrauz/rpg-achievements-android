<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_login">

    <Space
        android:id="@+id/spaceStart"
        android:layout_width="match_parent"
        android:layout_height="220dp"/>

    <ImageView
        android:id="@+id/imageViewSplash"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/img_achievement"
        android:layout_marginStart="48dp"
        app:layout_constraintTop_toBottomOf="@id/spaceStart"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:text="@string/login"
        android:layout_marginStart="36dp"
        app:layout_constraintTop_toTopOf="@id/imageViewSplash"
        app:layout_constraintBottom_toBottomOf="@id/imageViewSplash"
        app:layout_constraintStart_toEndOf="@id/imageViewSplash"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:hint="@string/type_email"
        android:layout_marginTop="36dp"
        app:errorEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/imageViewSplash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="@color/white"
            android:maxLines="1"
            android:textColor="@color/white"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:hint="@string/type_password"
        android:layout_marginTop="8dp"
        app:errorEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/textInputEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:maxLines="1"/>

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>