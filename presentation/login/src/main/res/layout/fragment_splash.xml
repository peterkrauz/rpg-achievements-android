<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/imageViewSplash"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/img_achievement"
        android:layout_marginStart="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewSplash" />

    <TextView
        android:id="@+id/textViewSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:text="@string/rpg_achievements"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toTopOf="@id/imageViewSplash"
        app:layout_constraintBottom_toBottomOf="@id/imageViewSplash"
        app:layout_constraintStart_toEndOf="@id/imageViewSplash"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>