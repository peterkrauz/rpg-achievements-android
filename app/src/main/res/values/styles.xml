<resources>

    <!-- Base application theme. -->
    <style name="RpgAchievements" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="RpgAchievements.Launcher" parent="RpgAchievements">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="RpgAchievements.LoginButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/ripple_login_button</item>
    </style>

</resources>
